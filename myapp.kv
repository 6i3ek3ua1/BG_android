<CalculatorScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: [10, 50, 10, 10]
        spacing: 20

        Widget:
            size_hint_y: 0.2

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            size_hint_y: None
            height: 44

            MDLabel:
                text: "Unit 1"
                size_hint_x: None
                width: 100
                halign: 'right'

            MDDropDownItem:
                id: unit1
                text: "Select unit"
                size_hint_x: None
                width: 200
                pos_hint: {"center_x": 0.5}
                on_release: app.open_dropdown(self)

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            size_hint_y: None
            height: 44

            MDLabel:
                text: "Unit 2"
                size_hint_x: None
                width: 100
                halign: 'right'

            MDDropDownItem:
                id: unit2
                text: "Select unit"
                size_hint_x: None
                width: 200
                pos_hint: {"center_x": 0.5}
                on_release: app.open_dropdown(self)

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            size_hint_y: None
            height: 44

            MDLabel:
                text: "Unit 3"
                size_hint_x: None
                width: 100
                halign: 'right'

            MDDropDownItem:
                id: unit3
                text: "Select unit"
                size_hint_x: None
                width: 200
                pos_hint: {"center_x": 0.5}
                on_release: app.open_dropdown(self)

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            size_hint_y: None
            height: 44

            MDLabel:
                text: "Unit 4"
                size_hint_x: None
                width: 100
                halign: 'right'

            MDDropDownItem:
                id: unit4
                text: "Select unit"
                size_hint_x: None
                width: 200
                pos_hint: {"center_x": 0.5}
